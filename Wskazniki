#include <stdlib.h>


int* rezerwuj()
{
  return malloc(sizeof(int));
}


int main()
{
    int * wsk=rezerwuj();
     printf("%p\n",wsk);
    printf("%d",*wsk);
    return 0;
}


---------------------------------3.2.11 --------------------------------------------



#include <stdio.h>
#include <stdlib.h>



int * rezerwuj (unsigned int n)
{
    return malloc(n*sizeof(int));
}

int main()
{

        int * wsk=rezerwuj(10);
     printf("%p\n",wsk);

    return 0;

    return 0;
}


-------------------------------3.2.13---------------------------------------------



#include <stdio.h>
#include <stdlib.h>

double f(int x)
{
    return 3*x;

}

double gie(double  (*f)(int x), int n)
{
  return f(n);
}


int main()
{


    printf("%f\n", gie(&f,8));
    return 0;
}


-------------------------------3.2.14--------------------------------------------




#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

int f(int x)
{
    return 3*x;


}

int g(int x)
{
    return x*x;

}

bool h (int  (*f)(int x),int (*g)(int x), int n)
{
  if(g(n)==f(n))
  {
      return true;
  }
  return false;
}


int main()
{


    printf("%d\n", h(&f,&g,3));
    return 0;
}
  




------------------------------------modyfikacja jakiego≈õ zadania------------------



#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

int f(int x)
{
    return 3*x;


}

int g(int x)
{
    return x*x;

}

bool h (int  (*f)(int x),int (*g)(int x), int n)
{
    for(int i =0;i<=n;i++)
    {
  if(g(i)==f(i))
  {
      return false;
  }

    }
    return true;
}


int main()
{


    printf("%d\n", h(&f,&g,3));
    return 0;
}





